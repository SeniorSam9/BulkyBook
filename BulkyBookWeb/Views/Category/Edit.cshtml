<!--
    to bind the form with the Category class
    using tag helpers will creae Category object
-->
@model Category
<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Category</h2>
            <!--<div asp-validation-summary="All"></div> -->
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name" class="text-warning"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder" class="text-warning"></label>
            <input asp-for="DisplayOrder" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mb-4"><i class="bi bi-pencil-fill"></i> &nbsp; Update</button> <br />
        <a asp-controller="Category" asp-action="Index" class="btn btn-danger">Back to List</a>
    </div>
</form>

@section Scripts {
    @{

        <partial name="_ValidationScriptsPartial"></partial>
    }

}