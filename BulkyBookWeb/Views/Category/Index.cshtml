@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class= "text-info">Category</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-warning"><i class="bi bi-plus-circle"></i> &nbsp; Create New Category</a>
        </div>
    </div>
    <br />
<table class= "table table-bordered table-striped" style= "width: 100%;">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Display Order</th>
        </tr>
    </thead>
    <tbode>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="50%">
                     @obj.Name
                </td>
                <td width= "50%">
                    @obj.DisplayOrder
                </td> 
                <td>
                        <div class="w-75 btn-group" role="group" style="width: 30%;">
                            <a asp-controller="Category" asp-action="Edit" class="btn btn-primary" asp-route-id="@obj.Id"><i class="bi bi-pencil-fill"></i> &nbsp; Edit</a>
                    </div>
                </td>
                    <td>
                        <div class="w-75 btn-group" role="group" style="width: 30%;">
                            <a asp-controller="Category" asp-action="Delete" class="btn btn-danger" asp-route-id="@obj.Id"> &nbsp; Delete</a>
                        </div>
                    </td>
            </tr>
        }
    </tbode>


</table>
</div>